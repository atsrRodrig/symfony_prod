
{% extends "TroiswaBackBundle::layout.html.twig" %}

{% block titre %}
    InfoFilm {{ parent() }}

{% endblock %}


{% block css_s %}
    {{ parent() }}

{% endblock %}



{% block central %}

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">

                    <h1 class="page-header">
                        Information sur un Film
                    </h1>

                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="{{ path('troiswa_back_index') }}">Retour à l'accueil</a>
                        </li>

                        <li class="active">
                            <a href="{{ path("troiswa_back_films") }}"><i class="fa fa-table"></i>  Films /</a>
                            <i class="fa fa-table"></i>  UnFilm
                        </li>

                    </ol>
                </div>
            </div>
            <!-- /.row -->


            <div class="row">
                <div class="col-lg-9">

                    <h2>Film selectionné</h2>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">

                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre</th>
                                <th>Description</th>
                                <th>Date Réalisation</th>
                                <th>Note</th>
                                <th>Genre</th>
                                <th>Image</th>
                            </tr>
                            </thead>

                            <tbody>

                            {# dump(unFilm) #}

                                <tr>
                                    <td>{{ unFilm.id  }}</td>
                                    <td>{{ unFilm.titre }}</td>
                                    <td>{{ unFilm.description }}</td>
                                    <td>{{ unFilm.dateDeRealisation|date("d/m/Y") }}</td>
                                    <td>{{ unFilm.note }}</td>
                                    <td>{{ unFilm.genre.type }}</td>
                                    <td><img style="width:100px; height: 90px; "src="{{ asset(unFilm.displayImage)}}"></td>
                                    <!--<td><img src="{# {{ asset("images/")}}{{ unActeur.image  }}#}"></td> -->
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-lg-3">
                    <h4>Plus d'informations</h4>
                    <p>Pour les informations complémentaires, visitez <a target="_blank" href="http://getbootstrap.com/css/#tables">Bootstrap's Tables Documentation</a>.</p>
                </div>
            </div>
            <!-- /.row -->

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}


